<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="140dp"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary">

    <TextView
        android:id="@+id/note_fragment_matter_dialog_text_title"
        android:text="主题："
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:layout_below="@id/note_fragment_matter_dialog_text_title"
        android:id="@+id/note_fragment_matter_dialog_edit_title"
        android:hint="标题不能为空"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_below="@id/note_fragment_matter_dialog_edit_title"
        android:id="@+id/note_fragment_matter_dialog_text_content"
        android:text="内容："
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/note_fragment_matter_dialog_edit_content"
        android:hint="内容不能为空"
        android:layout_below="@id/note_fragment_matter_dialog_text_content"
        android:layout_width="match_parent"
        android:layout_height="130dp" />

</RelativeLayout>