<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorAccent">

    <CheckBox
        android:gravity="center"
        android:id="@+id/note_fragment_matter_list_item_box"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:checked="false"
        android:layout_width="30dp"
        android:layout_height="30dp" />

    <TextView
        android:id="@+id/note_fragment_matter_list_item_text"
        android:layout_toStartOf="@id/note_fragment_matter_list_item_box"
        android:layout_toLeftOf="@id/note_fragment_matter_list_item_box"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:padding="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</RelativeLayout>